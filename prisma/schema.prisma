generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  DELIVERY_PERSON
}

model User {
  id       String   @id @default(uuid())
  name     String
  cpf      String   @unique
  password String
  role     UserRole @default(DELIVERY_PERSON)
  orders   Order[]

  @@map("users")
}

model Recipient {
  id      String   @id @default(uuid())
  name    String
  address Address?
  orders  Order[]

  @@map("recipients")
}

model Address {
  street       String
  number       Int
  complement   String?
  neighborhood String
  city         String
  state        String
  zipcode      String
  recipientId  String  @unique @map("recipient_id")

  recipient Recipient @relation(fields: [recipientId], references: [id], onDelete: Cascade)

  @@map("addresses")
}

enum OrderStatus {
  STORED
  WAITING
  PICKED_UP
  DELIVERED
}

model Order {
  id               String      @id @default(uuid())
  recipientId      String      @map("recipient_id")
  deliveryPersonId String?     @map("delivery_person_id")
  status           OrderStatus
  storedAt         DateTime    @default(now())
  postedAt         DateTime?
  pickedUpAt       DateTime?
  deliveredAt      DateTime?

  deliveryPerson User?     @relation(fields: [deliveryPersonId], references: [id])
  recipient      Recipient @relation(fields: [recipientId], references: [id])

  @@map("orders")
}
